{%- liquid
  assign sett_title = section.settings.title
  assign style_title = section.settings.style_title -%}
{%- if sett_title != blank -%}
	{%- if style_title != 'title_10' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}}">
		<{% if section.settings.typetitle %}{{section.settings.typetitle}}{% else %}h2{% endif %} 
            class="section-title tc pr flex fl_center al_center fs__24 {{style_title}}">
          	<span class="mr__10 ml__10">{{sett_title}}</span>
        </{% if section.settings.typetitle %}{{section.settings.typetitle}}{% else %}h2{% endif %}>
		<span class="dn tt_divider">
          	<span></span>
          	<i class="dn clpr{{section.settings.show_clpr}} {{style_title |split:'+' | last }} la-{{section.settings.ic_tt}}"></i>
          	<span></span>
        </span>
        <{% if section.settings.typetitle_subtitle %}{{section.settings.typetitle_subtitle}}{% else %}span{% endif %} 
          class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">
          {{section.settings.sub_title}}
        </{% if section.settings.typetitle_subtitle %}{{section.settings.typetitle_subtitle}}{% else %}span{% endif %}>
		</div>
	{%- else -%}
	    <div class="row al_center fl_center title_10 {{section_title}}">
	      <div class="col-auto col-md">
            	<{% if section.settings.typetitle %}{{section.settings.typetitle}}{% else %}h2{% endif %}
                    class="dib tc section-title fs__24">
                  	{{sett_title}}
           		</{% if section.settings.typetitle %}{{section.settings.typetitle}}{% else %}h2{% endif %}>
          </div>
	      <div class="col-auto"><a href="{{url|default:'/'}}">{{section.settings.btn_title}}</a></div>
	    </div>
	{%- endif -%}
{%- endif -%}

